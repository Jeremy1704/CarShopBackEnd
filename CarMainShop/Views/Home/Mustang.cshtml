
@{
    ViewData["Title"] = "Mustang";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mustang</title>
    <link rel="stylesheet" href="/css/mustangStyle.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mate:ital@0;1&family=Rubik+Mono+One&family=Whisper&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&display=swap" rel="stylesheet">
</head>
<body>
    <nav>
        <button class="buttonHome" type="submit" id="home">
            <img src="~/images/chrome_i28Vxga1oz.png" class="home">
        </button>
        <button class="buttonProfile" type="submit" id="profile">
            <img src="~/images/images.png" class="profile">
        </button>
        <button class="buttonBuy" type="submit" id="buy">
            <img src="~/images/buy-260-485525.png" class="buy">
        </button>
    </nav>

    <div class="slideshow-container" style=" align-items: center; bottom: 5vw; left: 25%;">

        <div class="mySlides fade">
            <img src="~/images/Mustang.jpg" style=" border-radius: 10px; top: 10vw; width:50vw">
        </div>

        <div class="mySlides fade">
            <img src="~/images/MustangCur.jpg" style=" border-radius: 10px;width:50vw">
        </div>

        <div class="mySlides fade">
            <img src="~/images/MustangSide.jpg" style=" border-radius: 10px;width:50vw">
        </div>

    </div>


    <div style="text-align:center; margin-top: 30%;">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
    </div>
    <script src="/js/site.js"></script>


    <div class="square">
        <img src="~/images/MustangCatalog1.jpg" style=" border-radius: 10px;width: 100%;">
        <p>
            <b style="margin-top:2vw">Un aspect iconic al Ford Mustang este<br> grila sa distinctivă, simbol al puterii și stilului sportiv.</b>
        </p>
        <button type="submit" class="buttonMustangCatalog1"> Buy</button>
    </div>

    <div class="square2">
        <img src="~/images/MustangCatalog2.jpg" style=" border-radius: 10px;width: 100%;">
        <p>
            <b style="margin-top:2vw">Un aspect iconic al Ford Mustang este<br> grila sa distinctivă, simbol al puterii și stilului sportiv.</b>
        </p>
        <button type="submit" class="buttonMustangCatalog1"> Buy</button>
    </div>

    <div class="square3">
        <img src="~/images/MustangCatalog2 (2).jpg" style=" border-radius: 10px;width: 100%; height: 11.5vw;">
        <p>
            <b style="margin-top:2vw">Un aspect iconic al Ford Mustang este<br> grila sa distinctivă, simbol al puterii și stilului sportiv.</b>
        </p>
        <button type="submit" class="buttonMustangCatalog1"> Buy</button>
    </div>



</body>
</html>